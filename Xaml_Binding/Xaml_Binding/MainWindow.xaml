<Window x:Class="Xaml_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xaml_Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <SolidColorBrush x:Key="ColorLabel" Color="BlueViolet"></SolidColorBrush>
        
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Foreground="{StaticResource ResourceKey=ColorLabel}">Nom</Label>
                <TextBox Name="Nom"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Foreground="{StaticResource ResourceKey=ColorLabel}">Prenom</Label>
                <TextBox Name="Prenom"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Foreground="{StaticResource ResourceKey=ColorLabel}">Telephone</Label>
                <TextBox Name="Telephone"></TextBox>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
